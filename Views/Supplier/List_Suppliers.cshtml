@model List<InventorySystem.Models.Supplier>

<!DOCTYPE html>
<html lang="en">

<body class="nav-md">

    <div class="container body">


        <div class="main_container">

            @{
                Html.RenderPartial("Partial_");
            }

            <!-- top navigation -->
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>
                                All Suppliers
                            </h3>
                        </div>


                    </div>
                    <div class="clearfix"></div>

                    <div class="row">

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>View Suppliers list</h2>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <table id="example" class="table table-striped responsive-utilities jambo_table">
                                        <thead>
                                            <tr class="headings">

                                                <th>Company Name </th>
                                                <th>Short Name </th>
                                                <th>Salesman </th>
                                                <th>Mobile </th>
                                                <th width="30%">Address </th>
                                                <th>Status </th>
                                                <th width="11%" align="center">Action </th>

                                            </tr>
                                        </thead>

                                        <tbody>

                                            @foreach (var v in Model)
                                            {
                                                <tr>

                                                    <td class=" ">@v.company_name</td>
                                                    <td class=" ">@v.company_short_name </td>
                                                    <td class=" ">@v.sales_contact_name </td>
                                                    <td class=" ">@v.sales_contact_mobile</td>
                                                    <td class=" ">@v.address</td>
                                                    @if (@v.is_active == 1)
                                                    {
                                                        <td class=" ">Active</td>
                                                    }
                                                    @if (@v.is_active == 0)
                                                    {
                                                        <td class=" ">Deactive</td>
                                                    }
                                                    <td>
                                                        <a href="~/Supplier/View/@v.Id/"><i class="fa fa-eye"></i></a> &nbsp;&nbsp;&nbsp;
                                                        <a href="~/Supplier/Edit/@v.Id/"><i class="fa fa-pencil" aria-hidden="true"></i></a> &nbsp;&nbsp;&nbsp;
                                                        @*<a href="~/Supplier/Delete/@v.Id/">Delete</a>*@
                                                        @*<i class="fa fa-eye"><a href="~/Supplier/Delete/@v.Id/" onclick="return confirm('Are you sure you want to Delete?')"></a></i>*@

                                                        <a href="~/Supplier/Delete/@v.Id/" onclick="return confirm('Are you sure you want to Delete?')"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <br />

                    </div>
                </div>

            </div>
            <!-- /page content -->
        </div>

    </div>
   
</body>

</html>