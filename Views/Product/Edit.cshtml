@model InventorySystem.Models.Product
<body class="nav-md">

    <div class="container body">


        <div class="main_container">

            @{
                Html.RenderPartial("Partial_");
            }

            <div class="right_col" role="main">
                <div class="">



                    <div class="page-title">
                        <div class="title_left">
                            <h3>Product</h3>
                        </div>

                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Edit Product <small></small></h2>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <br />
                                <form id="demo-form2" action="~/Product/Edit/@Model.Id" method="post" data-parsley-validate class="form-horizontal form-label-left">



                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Custom Label / SKU <span class="required">*</span></label>
                                        <div class="col-md-5 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" type="text" value="@Model.sku" name="sku_label" required>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Item Title <span class="required">*</span></label>
                                        <div class="col-md-5 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" type="text" value="@Model.item_title" name="title" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Normal Price <span class="required">*</span></label>
                                        <div class="col-md-2 col-sm-6 col-xs-12" display:inline>
                                            <input id="middle-name" style="text-align:center" class="form-control col-md-7 col-xs-12" value="@Model.normal_price" type="text" name="normal_price" required>
                                        </div>
                                        <label for="middle-name" class="control-label col-md-1 col-sm-3 col-xs-12"> +VAT= </label>
                                        <div class="col-md-2 col-sm-6 col-xs-12">
                                            <input id="middle-name" style="text-align:center" class="form-control col-md-7 col-xs-12" value="@Model.normal_vat" type="text" name="normal_vat">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Trade Price</label>
                                        <div class="col-md-2 col-sm-6 col-xs-12" display:inline>
                                            <input id="middle-name" style="text-align:center" class="form-control col-md-7 col-xs-12" value="@Model.trade_price" type="text" name="trade_price" required>
                                        </div>
                                        <label for="middle-name" class="control-label col-md-1 col-sm-3 col-xs-12"> +VAT= </label>
                                        <div class="col-md-2 col-sm-6 col-xs-12">
                                            <input id="middle-name" style="text-align:center" class="form-control col-md-7 col-xs-12" readonly value="@Model.trade_vat" type="text" name="trade_vat">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Premium Price <span class="required">*</span></label>
                                        <div class="col-md-2 col-sm-6 col-xs-12" display:inline>
                                            <input id="middle-name" style="text-align:center" class="form-control col-md-7 col-xs-12" value="@Model.premium_price" type="text" name="premium_price" required>
                                        </div>
                                        <label for="middle-name" class="control-label col-md-1 col-sm-3 col-xs-12"> +VAT= </label>
                                        <div class="col-md-2 col-sm-6 col-xs-12">
                                            <input id="middle-name" style="text-align:center" class="form-control col-md-7 col-xs-12" value="@Model.premium_vat" type="text" name="premium_vat">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Other Price <span class="required">*</span></label>
                                        <div class="col-md-2 col-sm-6 col-xs-12" display:inline>
                                            <input id="middle-name" style="text-align:center" class="form-control col-md-7 col-xs-12" value="@Model.other_price" type="text" name="other_price" required>
                                        </div>
                                        <label for="middle-name" class="control-label col-md-1 col-sm-3 col-xs-12"> +VAT= </label>
                                        <div class="col-md-2 col-sm-6 col-xs-12">
                                            <input id="middle-name" style="text-align:center" class="form-control col-md-7 col-xs-12" value="@Model.other_vat" type="text" name="other_vat">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Warn Level </label>
                                        <div class="col-md-5 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" value="@Model.warn_level" type="text" name="warn_level">
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Barcode </label>
                                        <div class="col-md-5 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" value="@Model.barcode" type="text" name="barcode">
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Supplier Code <span class="required">*</span></label>
                                        <div class="col-md-5 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" value="@Model.supplier_code" type="text" name="supplier_code" required>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Cost Price </label>
                                        <div class="col-md-5 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" value="@Model.cost" type="text" name="cost">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Categories </label>
                                        <div class="col-md-5 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" value="@Model.category_id" type="text" name="category">
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Courier Type </label>
                                        <div class="col-md-5 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" value="@Model.courier_type" type="text" name="courier_type">
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Tax Type </label>
                                        <div class="col-md-5 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" value="@Model.tax_type" type="text" name="tax_type">
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Note </label>
                                        <div class="col-md-5 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" value="@Model.note" type="text" name="notes">
                                        </div>
                                    </div>


                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                                        <input type="submit" value="Edit Product" class="btn btn-success" />
                                    </div>
                                </form>
                            </div>
                            <div class="form-group">
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">

                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</body>